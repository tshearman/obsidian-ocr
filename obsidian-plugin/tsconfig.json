{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2022",
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "noEmit": true,
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*.ts"]
}
