{
  "name": "obsidian-ocr-pdf-watcher",
  "version": "0.1.0",
  "description": "Obsidian plugin: watch folders for PDFs, OCR them with LLM vision APIs",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "node esbuild.config.mjs production",
    "test": "vitest run",
    "test:watch": "vitest",
    "ocr": "tsx scripts/cli.ts",
    "check-ocr": "tsx scripts/check-ocr.ts",
    "lint": "eslint .",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint && npm test"
  },
  "keywords": ["obsidian", "ocr", "pdf"],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "builtin-modules": "^4.0.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.0.0",
    "mupdf": "^1.0.0",
    "obsidian": "^1.7.2",
    "simple-git-hooks": "^2.11.0",
    "tsx": "^4.0.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "openai": "^4.60.0",
    "pdfjs-dist": "^4.9.155"
  }
}
